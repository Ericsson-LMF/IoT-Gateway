            <version>3.0.4</version>
        </dependency>

        <dependency>
            <groupId>org.knopflerfish.bundle</groupId>
            <artifactId>crimson</artifactId>
            <version>2.1.0.kf3</version>
        </dependency>

        <dependency>
            <groupId>org.knopflerfish.bundle</groupId>
            <artifactId>device</artifactId>
            <version>3.0.0</version>
        </dependency>

        <dependency>
            <groupId>org.knopflerfish.bundle</groupId>
            <artifactId>device-IMPL</artifactId>
            <version>3.0.0</version>
        </dependency>

        <dependency>
            <groupId>org.knopflerfish.bundle</groupId>
            <artifactId>event</artifactId>
            <version>3.0.8</version>
        </dependency>

        <dependency>
            <groupId>org.knopflerfish.bundle</groupId>
            <artifactId>frameworkcommands-IMPL</artifactId>
            <version>3.2.0</version>
        </dependency>

        <dependency>
            <groupId>org.knopflerfish.bundle</groupId>
            <artifactId>trayicon_fw</artifactId>
            <version>3.0.2</version>
        </dependency>

        <dependency>
            <groupId>org.knopflerfish.bundle</groupId>
            <artifactId>http</artifactId>
            <version>3.1.2</version>
        </dependency>

        <dependency>
            <groupId>org.knopflerfish.bundle</groupId>
            <artifactId>http-IMPL</artifactId>
            <version>3.1.2</version>
        </dependency>

        <dependency>
            <groupId>org.knopflerfish.bundle</groupId>
            <artifactId>httproot</artifactId>
            <version>2.0.2</version>
        </dependency>

        <dependency>
            <groupId>org.knopflerfish.bundle</groupId>
            <artifactId>httproot-IMPL</artifactId>
            <version>3.0.1</version>
        </dependency>

        <dependency>
            <groupId>org.knopflerfish</groupId>
            <artifactId>log</artifactId>
            <version>3.1.3</version>
        </dependency>

        <dependency>
            <groupId>org.knopflerfish</groupId>
            <artifactId>log-IMPL</artifactId>
            <version>3.1.3</version>
        </dependency>

        <dependency>
            <groupId>org.knopflerfish.bundle</groupId>
            <artifactId>logcommands-IMPL</artifactId>
            <version>3.1.1</version>      
        </dependency>

        <dependency>
            <groupId>org.knopflerfish.bundle</groupId>
            <artifactId>remotefw-API</artifactId>
            <version>2.0.0</version>
        </dependency>

        <dependency>
            <groupId>org.knopflerfish.bundle</groupId>
            <artifactId>component</artifactId>
            <version>3.1.14</version>
        </dependency>

        <dependency>
            <groupId>org.knopflerfish.bundle</groupId>
            <artifactId>scrcommands-IMPL</artifactId>
